{
  "extends": "./react.json",
  "compilerOptions": {
    // Plugin-specific settings
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    // Allow synthetic default imports for React
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Module resolution for plugin projects
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Paths for common plugin project structure
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/styles/*": ["./src/styles/*"]
    },

    // Types for plugin development
    "types": ["react", "react-dom", "vite/client"]
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.ts",
    "**/*.d.ts",
    "index.html"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "public",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
