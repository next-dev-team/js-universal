{
  "extends": "./base.json",
  "compilerOptions": {
    // Node.js specific settings
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    
    // Node.js doesn't need DOM types
    "skipLibCheck": true,
    
    // Allow JSON imports
    "resolveJsonModule": true,
    
    // Node.js module interop
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // Disable strict checks that cause build failures
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    // Paths for common Node.js project structure
    "paths": {
      "@/*": ["./src/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/services/*": ["./src/services/*"],
      "@/models/*": ["./src/models/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/config/*": ["./src/config/*"],
      "@/routes/*": ["./src/routes/*"]
    },
    
    // Types for Node.js development
    "types": [],
    
    // Output settings for Node.js
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Source maps for debugging
    "sourceMap": true,
    "inlineSourceMap": false,
    
    // Declaration files
    "declaration": true,
    "declarationMap": true,
    
    // Emit settings
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}