{
  "name": "@js-universal",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "type:check": "turbo run type:check",
    "ui:add": "cd packages/ui && pnpm ui:add",
    "ui": "turbo dev --filter=rn-shadcn --concurrency 4",
    "ui:full": "turbo run dev --filter=rn-shadcn... --parallel",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:rn-shadcn": "turbo build --filter=rn-shadcn",
    "clean": "turbo clean && rm -rf .turbo node_modules"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "packageManager": "pnpm@10.19.0",
  "resolutions": {
    "lightningcss": "1.27.0"
  }
}
