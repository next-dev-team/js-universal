{
  "name": "counter-app-dev",
  "version": "1.0.0",
  "description": "Counter App Development Mode - Testing plugin with hot reload and real-time changes",
  "main": "index.html",
  "scripts": {
    "dev": "vite --port 3001 --host",
    "build": "vite build",
    "preview": "vite preview --port 3001"
  },
  "keywords": [
    "electron",
    "plugin",
    "development",
    "counter",
    "hot-reload"
  ],
  "author": "Super App Team",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0"
  },
  "manifest": {
    "id": "counter-app-dev",
    "name": "Counter App Dev",
    "version": "1.0.0",
    "description": "Counter App Development Mode - Testing plugin with hot reload and real-time changes",
    "author": "Super App Team",
    "icon": "counter-icon.svg",
    "main": "index.html",
    "permissions": [
      "storage",
      "notifications",
      "communication"
    ],
    "development": {
      "hotReload": true,
      "devTools": true,
      "fileWatcher": true
    }
  }
}
